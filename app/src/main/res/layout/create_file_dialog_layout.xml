<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/create_file_name_edit"
        android:maxLength="20"
        android:padding="20dp"
        android:hint="清單名稱"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Dialog_Title_layout"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Dialog_Title_layout"
        android:background="#888484">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/RollCall__NewFile_Dialog__Title_NewFile"
            android:id="@+id/Dialog_Title"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/RollCall__NewFile_Dialog__Messages"
        android:id="@+id/Dialog_Message"
        android:layout_below="@+id/create_file_name_edit"
        android:layout_centerHorizontal="true" />
</RelativeLayout>