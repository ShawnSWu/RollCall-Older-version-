<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="應到人數"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/should_inpeople_tv" />

        <TextView
            android:text="~~~~~~~~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/should_inpeople" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:text="未到人數"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outpeople_tv" />

        <TextView
            android:text="~~~~~~~~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outpeople" />




    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:text="實到人數"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/real_inpeople_tv" />

        <TextView
            android:text="~~~~~~~~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/real_inpeople" />

    </LinearLayout>


</LinearLayout>