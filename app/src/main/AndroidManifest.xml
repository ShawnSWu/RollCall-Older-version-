<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.rollcall_10">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />




    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rollcalllogoicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".main.MainActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".splashscreen.SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name=".demo.BLE_MainActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".auto_add.AutoAdd_BLE_MainActivity"
            android:screenOrientation="portrait" />


        <activity android:name=".manual_add.ManualAdd_BLE_MainActivity"
            android:screenOrientation="portrait"  />

        <activity android:name=".z_only_test.Test_ManualAdd_BLE_MainActivity"
            android:screenOrientation="portrait"  />

        <activity android:name=".rollcall.RollCall_BLE_MainActivity"
            android:screenOrientation="portrait"  />


        <activity android:name=".demo.Activity_BTLE_Services"
            android:screenOrientation="portrait" />




        <activity android:name=".recyclerview.Recyclerview_WatchList"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".demo.BLE_MainActivity" />

        <service
            android:name=".demo.Service_BTLE_GATT"
            android:enabled="true"
            android:exported="true">

        </service>

        <!-- Parent activity meta-data to support 4.0 and lower -->

        <activity android:name=".ble_device_setting.Set_BLE_Device"
            android:screenOrientation="portrait" />

        <service
            android:name=".notifications.Successful_NotificationDisplayService"
            android:enabled="true"
            android:exported="true"/>

        
        
        

        
        
        
    </application>

</manifest>